<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransportBooking"
    android:orientation="vertical"
    android:background="@color/background_screen" >

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="Booking"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewFrom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="17dp"
        android:background="@drawable/search_bar_round_square"
        android:backgroundTint="@color/white"
        android:completionThreshold="0"
        android:hint="New York (NYC)"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="From"
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/autoCompleteTextViewFrom"
        app:layout_constraintTop_toTopOf="@+id/autoCompleteTextViewFrom" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewTo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="17dp"
        android:background="@drawable/search_bar_round_square"
        android:backgroundTint="@color/white"
        android:completionThreshold="0"
        android:hint="London (LDN)"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewFrom"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="To"
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/autoCompleteTextViewTo"
        app:layout_constraintTop_toTopOf="@+id/autoCompleteTextViewTo" />


    <ImageButton
        android:id="@+id/buttonSwap"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/default_round_square"
        android:backgroundTint="@color/peach_300"
        app:tint="@color/white"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_swap"
        app:layout_constraintBottom_toBottomOf="@+id/autoCompleteTextViewTo"
        app:layout_constraintEnd_toEndOf="@+id/autoCompleteTextViewFrom"
        app:layout_constraintTop_toTopOf="@+id/autoCompleteTextViewFrom" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewTo"
        tools:layout_editor_absoluteX="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewDepartureDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="17dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/search_bar_round_square"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="00/00/0000"
                android:paddingTop="12dp"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Departure"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="@+id/textViewDepartureDate"
                app:layout_constraintTop_toTopOf="@+id/textViewDepartureDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewReturnDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="17dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/search_bar_round_square"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="00/00/0000"
                android:paddingTop="12dp"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Return"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="@+id/textViewReturnDate"
                app:layout_constraintTop_toTopOf="@+id/textViewReturnDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Passenger and Luggage"
            android:textColor="@color/text_secondary"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_small"
                app:tint="@color/green_500" />

            <EditText
                android:id="@+id/editTextNbPerson"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_child"
                app:tint="@color/green_500" />

            <EditText
                android:id="@+id/editTextNbChildren"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pet"
                app:tint="@color/green_500" />

            <EditText
                android:id="@+id/editTextNbPet"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_luggage"
                app:tint="@color/green_500" />

            <EditText
                android:id="@+id/editTextNbLuggage"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Class"
            android:textColor="@color/text_secondary"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEconomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/green_500"
                android:clickable="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="Economy"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="Business"
                android:textColor="@color/green_500"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Transport"
            android:textColor="@color/text_secondary"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPlane"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/green_500"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/plane"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/imageViewBoat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/boat"
                app:tint="@color/green_500" />

            <ImageView
                android:id="@+id/imageViewTrain"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/train"
                app:tint="@color/green_500" />

            <ImageView
                android:id="@+id/imageViewBus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/default_round_square"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bus"
                app:tint="@color/green_500" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/alert_warning"
        android:fontFamily="@font/poppins_bold"
        android:padding="13dp"
        android:text="Search"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>